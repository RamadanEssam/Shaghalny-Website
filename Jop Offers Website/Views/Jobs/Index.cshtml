@model IEnumerable<Jop_Offers_Website.Models.Job>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>قائمه بجميع الوظائف</h2>

<p>
    @Html.ActionLink("اضافه وظيفه جديده", "Create" , null , new {@class = "btn btn-warning" })
</p>
<table class="table table-hover">
    <thead class="table-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.category.CatogryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobContent)
            </th>
            <th>
                اسم الناشر
            </th>
            <th>
                @Html.DisplayNameFor(model => model.jobDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.JobImage)
            </th>
            <th></th>
        </tr>
    </thead>

@foreach (var item in Model) {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.category.CatogryName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.JobTitle)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.JobContent)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.User.UserName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.jobDate)
    </td>
    <td>

        <img src="~/Uploads/@Html.DisplayFor(modelItem => item.JobImage)" class=" img-thumbnail" style="width:48px ; height:48px" />
    </td>
    <td>
        @Html.ActionLink("تعديل", "Edit", new { id = item.Id  }, new { @class = "btn btn-primary" }) |
        @Html.ActionLink("التفاصيل", "Details", new { id = item.Id }, new { @class = "btn btn-info" }) |
        @Html.ActionLink("حذف", "Delete", new { id = item.Id} , new { @class = "btn btn-danger" })
    </td>
</tr>
}

</table>
