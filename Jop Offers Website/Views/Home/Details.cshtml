@model Jop_Offers_Website.Models.Job

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<div class="container">
    <div class="row mx-0 my-2">
        <div class="col-md-4 col-12 row">
            <div class="col-12 pt-3">
                <img src="~/Uploads/@Html.DisplayFor(model => model.JobImage)" class=" w-100" />
            </div>
        </div>
        <div class="col-md-8 col-12 py-3">
            <div class="row">
                <div class="col-12 text-center row">
                    <div class="col-md-12 ">
                        <div class="text-center text-white mb-3 alert " style="box-shadow: 0px 6px 2px #8080808c; background-color: #212529e0 ">
                            <h4 class=" my-0 px-0">@Model.JobTitle</h4>
                        </div>
                       

                    </div>
                </div>
                <div class="col-12 text-center row">
                    <div class="col-md-12">
                        <p><i class="fa fa-info-circle mx-1 text-secondary"></i><span class="mx-1">وصف الوظيفه :</span></p>
                    </div>
                    <div class="col-md-12">
                        <p class="text-secondary">@Model.JobContent</p>
                        <hr />
                    </div>
                </div>
                <div class="col-12 row">
                    <div class="col-md-6">
                        <p class="text-secondary"><i class="fa fa-globe mx-1"></i><span class="text-dark mx-1">مستوى الخبره  :</span>@Model.Experience.ExpLevel</p>
                    </div>
                    <div class="col-md-6">
                        <p class="text-secondary"><i class="fa fa-book mx-1"></i><span class="text-dark mx-1">المؤهل الدراسى:</span>@Model.Qualification.Quali</p>
                    </div>
                </div>
                <div class="col-12 row">
                    <div class="col-md-6">
                        <p class="text-secondary"><i class="fa fa-money mx-1"></i><span class="text-dark mx-1">الحد الادنى للراتب :</span>@Model.MinSalary</p>
                    </div>
                    <div class="col-md-6">
                        <p class="text-secondary"><i class="fa fa-money mx-1"></i><span class="text-dark mx-1">الحد الاعلى للراتب:</span>@Model.MaxSalary</p>
                    </div>
                </div>
                <div class="col-12 row">
                    <div class="col-md-6">
                        <p class="text-secondary"><i class="fa fa-user mx-1"></i><span class="text-dark mx-1">الحد الادنى للعمر:</span>@Model.MinAge</p>
                    </div>
                    <div class="col-md-6">
                        <p class="text-secondary"><i class="fa fa-user mx-1"></i><span class="text-dark mx-1">الحد الاعلى للعمر:</span>@Model.MaxAge</p>
                    </div>
                </div>
                <div class="col-12 row">
                    <div class="col-md-6">
                        <p class="text-secondary"><i class="fa fa-transgender mx-1"></i><span class="text-dark mx-1">الجنس المطلوب:</span>@Model.Gender.gen</p>
                    </div>
                    <div class="col-md-6">
                        <p class="text-secondary"><i class="fa fa-map-marker mx-1"></i><span class="text-dark mx-1">مكان العمل :</span>@Model.Governorates.Name</p>
                    </div>
                    <div class="col-md-12">
                        <p class="text-secondary"><i class="fa fa-address-book mx-1"></i><span class="text-dark mx-1">نوع الوظيفه:</span>@Model.category.CatogryName</p>
                    </div>
                </div>
                <div class="col-12 row">
                    <div class="col-md-6">
                        <p class="text-secondary"><i class="fa fa-user-circle mx-1"></i><span class="text-dark mx-1">الناشر:</span>@Model.User.UserName</p>
                    </div>
                    <div class="col-md-6">
                        <p class="text-secondary"><i class="fa fa-calendar mx-1"></i><span class="text-dark mx-1">تاريح النشر:</span>@Model.jobDate.ToString("ddd,dd,MMM,yyyy")</p>
                    </div>
                </div>
                
                <div class="col-12 row">
                    <div class="text-center col-md-12">
                        <hr />
                        @Html.ActionLink("التقديم الى الوظيفه", "Apply", new { id = Model.Id }, new { @class = "btn btn-warning" }) 
                        @*@Html.ActionLink("الرجوع الى القائمه الرئيسيه", "Index", null, new { @class = "btn btn-outline-warning" })*@
                    </div>
                </div>  
            </div>
        </div>
    </div>
</div>
