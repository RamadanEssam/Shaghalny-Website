@model IEnumerable<Jop_Offers_Website.Models.JobsViewModel>

@{
    ViewBag.Title = "GetJobsByPublisher";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<div class="container">
    <div class="py-5 px-1" >
        <div style="box-shadow: 1px 10px 10px #80808061;">

            @if (Model.Count() == 0)
            {
                <div class="alert alert-danger mt-5">
                    <h3 class="text-center">لم يتم ارسال طلبات حتى الان</h3>
                </div>
            }
            else
            {
                foreach (var gr in Model)
                {
                    <h4 class="alert text-white text-center py-2 " style="box-shadow: 0px 6px 2px #8080808c; background-color: #212529e0 ">
                        @gr.JobTitel
                    </h4>

                    foreach (var item in gr.Items)
                    {
                        <div class="jobsearch row my-2 mx-2">
                            <div class="col-md-3 mx-0 px-0 text-center d-flex flex-column align-content-around">
                                <div class="my-md-auto ">
                                    <img src="~/Uploads/users/@item.user.image" class="" />
                                </div>
                            </div>
                            <div class="col-md p-3 d-flex flex-column align-content-around">
                                <div class="row my-auto">
                                    <div class="col-lg-3 col-4 px-lg-3 ">
                                        <span class="">اسم المتقدم </span>
                                    </div>
                                    <div class="col-lg-9 col-8 text-secondary">
                                        <h6> <span class="text-warning">:</span> @item.user.UserName</h6>
                                    </div>
                                    <div class="col-lg-3 col-4 px-lg-3">
                                        <span class="">رقم الموبايل</span>
                                    </div>
                                    <div class="col-lg-9 col-8 text-secondary">
                                        <h6> <span class="text-warning">:</span>@item.user.PhoneNumber</h6>
                                    </div>
                                    <div class="col-lg-3 col-4 px-lg-3">
                                        <span class="">البريد الالكترونى</span>
                                    </div>
                                    <div class="col-lg-9 col-8 text-secondary">
                                        <h6> <span class="text-warning">:</span>@item.user.Email</h6>
                                    </div>
                                    <div class="col-lg-3 col-4 px-lg-3">
                                        <span class="">تاريخ التقديم </span>
                                    </div>
                                    <div class="col-lg-9 col-8 text-secondary">
                                        <h6> <span class="text-warning">:</span>@item.ApplyDate.ToString("dddd,dd MMMM yyyy")</h6>
                                    </div>
                                    <div class="col-lg-3 col-4 px-lg-3">
                                        <span class="">الرساله </span>
                                    </div>
                                    <div class="col-lg-9 col-8 text-secondary">
                                        <h6>
                                            <span class="text-warning">:</span>
                                            @item.Message
                                            @if (item.Message == "")
                                            {<span>لم يتم ارساله رساله</span>}
                                        </h6>
                                    </div>
                                    <div class="col-lg-3 col-4 px-lg-3">
                                        <span class="">المحافظه </span>
                                    </div>
                                    <div class="col-lg-9 col-8 text-secondary">
                                        <h6> <span class="text-warning">:</span>@item.user.Governorate</h6>
                                    </div>
                                    <div class="col-12">
                                        @if (item.cv != null)
                                        {
                                            @Html.ActionLink("تحميل السيره الذاتيه", "DownloadCv", new { cv = item.cv }, new { @class = "btn btn-warning" })
                                        }
                                    </div>
                                </div>

                            </div>
                        </div>
                    }
                }
            }
        </div>
        </div>
</div>