@model IEnumerable<Jop_Offers_Website.Models.ApplyForJob>

@{
    ViewBag.Title = "GetJobsByUser";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<div class="container">
    <div class="" style="box-shadow: 1px 10px 10px #80808061;">

        @if (Model.Count() == 0)
        {
            <div class="alert alert-danger mt-5">
                <h5 class="text-center">لم يتم التقدم من طرفكم الى اى وظيفه</h5>
            </div>
        }
        else
        {
            <h4 class="text-center text-white my-3 alert " style="box-shadow: 0px 6px 2px #8080808c; background-color: #212529e0 ">جميع الوظائف التى تم التقدم اليها من طرفكم </h4>

            foreach (var item in Model)
            {

                <div class="jobsearch row my-2 mx-2">
                    <div class="col-md-3 mx-0 px-0 text-center d-flex flex-column align-content-around">
                        <div class="my-md-auto ">
                            <img src="~/Uploads/@item.job.JobImage" class="" />
                        </div>
                    </div>
                    <div class="col-md p-3 d-flex flex-column align-content-around">
                        <div class="row my-auto">
                            <div class="col-12 row">
                                <div class="col-md-6 row">
                                    <h6 class="text-secondary"><span class="text-dark">عنوان الوظيفه </span> <span>:</span> @item.job.JobTitle</h6>
                                </div>
                                <div class="col-md-6 row">

                                    <h6 class="text-secondary"> <span class="text-dark">الناشر</span> <span>:</span>@item.job.User.UserName</h6>

                                </div>
                            </div>
                            <div class="col-md-12 row">
                                <div class="col-md-6 row">
                                    <h6 class="text-secondary"><span class="text-dark">تاريخ النشر </span> <span>:</span>@item.job.jobDate.ToString("ddd,dd MMM yyyy")</h6>
                                </div>
                                <div class="col-md-6 row">
                                    <h6 class="text-secondary"> <span class="text-dark">تاريخ التقديم</span> <span>:</span>@item.ApplyDate.ToString("ddd,dd MMM yyyy")</h6>
                                </div>
                            </div>

                            <div class="col-md-12 text-center">
                                <hr class="" />
                                <span class="">تفاصيل الوظيفه</span>
                            </div>
                            <div class="col-md-12 text-secondary text-center">
                                <h6>@item.job.JobContent</h6>
                            </div>


                            <div class="col-md-12 text-center">
                                <span class="">نص الرساله </span>
                            </div>
                            <div class="col-md-12 text-secondary text-center">
                                @if (item.Message != "")
                                {
                                    <h6> @item.Message</h6>
                                }
                                else
                                {

                                    <h6>لم يتم ارسال رساله</h6>
                                }

                            </div>
                            @if (item.cv != null)
                            {
                                <div class="col-md-12 text-center">
                                    <h6>تم ارفاق السيره الذاتيه مع الطلب</h6>
                                </div>
                            }
                        </div>

                    </div>
                    <div class=" col-md-2 py-3 text-center d-flex flex-column align-content-around">
                        <div class="my-auto">
                            @Html.ActionLink("تعديل الطلب", "Edit", new { id = item.Id }, new { @class = "btn btn-warning my-1 w-100" })
                            @Html.ActionLink("حذف الطلب", "Delete", new { id = item.Id }, new { @class = "btn btn-danger mb-2 w-100" })
                        </div>
                    </div>
                </div>
                <hr class="" />
            }
        }
    </div>

</div>
