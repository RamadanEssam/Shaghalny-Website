@model IEnumerable<Jop_Offers_Website.Models.SavedJobs>

@{
    ViewBag.Title = "SavedJobs";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="container">
    @if (Model.Count() == 0)
    {
        <h5 class="alert-danger text-center my-5 py-2">لم يتم حفظ الى وظائف</h5>
    }
    else
    {
        <div class="row mx-0 px-0 mt-2">
            @if (Model != null)
            {
                foreach (var item2 in Model)
                {
                    <div class="col-md-6 col-lg-4 mb-4">
                        <div class="job bg-white text-secondary">
                            <img src="~/Uploads/@item2.job.JobImage" class="card-img-top img-fluid">
                            <div class="card-body bg-white">
                                <h5 class="card-title text-dark">@item2.job.JobTitle</h5>
                                <div class="row my-2">
                                    <div class="col">
                                        <span><i class="fa fa-calendar text-warning"></i></span>
                                        @item2.job.jobDate.ToString("ddd,dd,MMM,yyyy")
                                    </div>
                                    <div class="col">
                                        <span><i class="fa fa-map-marker text-warning"></i></span>
                                        @item2.job.Governorates.Name
                                    </div>
                                </div>
                                <p class="card-text">@item2.job.JobContent</p>

                                @Html.ActionLink("التفاصيل", "Details", new { jobId = item2.job.Id }, new { @class = "btn btn-warning" })
                                @Html.ActionLink("حذف", "DeleteSaveJob", new { id = item2.id }, new { @class = "btn btn-outline-danger" })
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    }

</div>
