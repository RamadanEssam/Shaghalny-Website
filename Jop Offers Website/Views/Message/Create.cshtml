@model Jop_Offers_Website.Models.MessageModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<div class="">
    <div class="container pt-4 mb-4">
        <h2 class="text-center mb-4">تواصل معنا</h2>
        <div class="row mx-0 text-center py-md-5 ">
            <div class="col-md-4">
                <div class="mb-2 text-primary ">
                    <i class="fa fa-share-alt fa-2x"></i>
                </div>
                <p><a href="#" class="text-decoration-none text-dark">FaceBook</a></p>
            </div>
            <div class="col-md-4 ">
                <div class="mb-2 text-danger">
                    <i class="fa fa-mobile-phone fa-3x"></i>
                </div>
                <p>16511</p>
                <p class="text-info">بسعر المكالمه العاديه</p>
            </div>
            <div class="col-md-4">
                <div class="mb-2 text-success">
                    <i class="fa fa-phone fa-2x"></i>
                </div>
                <p>01019801959</p>
            </div>
        </div>
    </div>
</div>
<hr />

<div class="container">
    
    @using (Html.BeginForm("Create", "Message", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <p class="alert alert-warning text-center mt-2">برجاء العلم أن موقع شغلنى هو موقع للإعلان عن الوظائف وليس شركة توظيف. عند التقديم على الوظائف يتم ارسال بياناتك للشركات وسيقومون بالتواصل معك</p>
            <h4 class="text-center">عندك استفسار أو تعليق؟</h4>
            @if (@ViewBag.me != null)
            {
                <div class="text-center py-3">

                    @if (ViewBag.st == "sended")
                    {
                    <span class="alert alert-success">@ViewBag.me</span>
                    }
                    else
                    {
                    <span class="alert alert-danger">@ViewBag.me</span>
                    }
                </div>

            }
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="row py-md-3">
                <div class="col-md-8 col-12 mx-auto">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md" })
                                <div class="col-md">
                                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control inputborder", placeholder = "الاسم" } })
                                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.PhoneNumber, htmlAttributes: new { @class = "control-label col-md" })
                                <div class="col-md">
                                    @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control inputborder", placeholder = "رقم الموبايل" } })
                                    @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group ">
                                @Html.LabelFor(model => model.Subject, htmlAttributes: new { @class = "control-label col-md" })
                                <div class="col-md">
                                    @Html.EditorFor(model => model.Subject, new { htmlAttributes = new { @class = "form-control inputborder", placeholder = "عنوان الرساله" } })
                                    @Html.ValidationMessageFor(model => model.Subject, "", new { @class = "text-danger" })
                                </div>
                            </div>


                        </div>
                        <div class="col-md-6 d-flex flex-column align-content-between ">

                            <div class="form-group h-75 ">
                                @Html.LabelFor(model => model.Message, htmlAttributes: new { @class = "control-label col-md" })
                                <div class="col-md h-75">
                                    @Html.TextAreaFor(model => model.Message, new { @class = "form-control h-100 inputborder", placeholder = "نص الرساله" })
                                    @Html.ValidationMessageFor(model => model.Message, "", new { @class = "text-danger" })
                                </div>
                            </div>


                            <div class="form-group ">
                                <div class=" col-md">
                                    <input type="submit" value="ارسال الرساله" class="btn btn-warning w-100 mt-2" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }


    <div class="text-center my-3">
        @Html.ActionLink("الرجوع الى الصفحه الرئيسيه", "Index", "Home", null, new { @class = "btn btn-outline-warning" })
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
